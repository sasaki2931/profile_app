<div class="edit text-center">
  <h1>自己紹介を編集する</h1>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :introduce, class: "d-block mb-2" %>
      <%= f.text_area :introduce, value: @自分の自己紹介が入ります, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :image, class: "d-block mb-2" %>
      <%= f.file_field :image %>
    </div>

    <div class="text-center mt-4">
      <%= f.submit "Create my introduce", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
