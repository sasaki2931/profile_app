<div class ="skill-new-head">>
  <h1>カテゴリ名にスキルを追加</h1>
</div>

<div class ="skill-new-body">
<% if @skill.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@skill.errors.count, "error") %> prohibited this <%= @skill.name %> from being saved:</h2>
    <ul>
    <% @skill.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @skill, local: true) do |f| %>
  <div class="name-area">
    <%= f.label :スキル名 %>
    <%= f.text_field :name, class: "custom-input" %>
  </div>
  <div class="lebel-area">
    <%= f.label :習得レベル %>
    <%= f.select :level, (1..100).to_a, {}, { class: "custom-input custom-select" } %>
    <p>1~100の間で選択してください</p>
  </div>
  <%= f.hidden_field :category_id, value: "#{@category_id}" %>
  <div class="new-button-area">
    <%= f.submit "追加する", class: "new-button" %>
  </div>
<% end %>

</div>